<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List view for Blanket Orders -->
    <record id="view_blanket_order_list" model="ir.ui.view">
        <field name="name">blanket.order.list</field>
        <field name="model">blanket.order</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="amount_total"/>
            </list>
        </field>
    </record>

    <!-- Form view for Blanket Orders -->
    <record id="view_blanket_order_form" model="ir.ui.view">
        <field name="name">blanket.order.form</field>
        <field name="model">blanket.order</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date_order" readonly="1"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="order_before_date"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    
                    <group class="oe_subtotal_footer oe_right">
                        <field name="amount_untaxed"/>
                        <field name="amount_tax"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="amount_total"/>
                        </div>
                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Blanket Orders -->
    <record id="action_blanket_order" model="ir.actions.act_window">
        <field name="name">Blanket Orders</field>
        <field name="res_model">blanket.order</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first blanket order
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem 
        id="menu_blanket_order"
        name="Blanket Orders"
        action="action_blanket_order"
        parent="sale.sale_menu_root"
        sequence="10"/>
</odoo>
